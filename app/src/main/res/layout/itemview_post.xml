<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemview_post_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingLeft="21dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp"
    tools:background="@color/colorWhite">

    <TextView
        android:id="@+id/itemview_post_text_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:lineSpacingExtra="2dp"
        tools:text="Instant View – отображение ссылок на статьи в сообщениях Telegram, которое не требует загрузки и имеет предсказуемый формат. " />

    <LinearLayout
        android:id="@+id/itemview_post_layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemview_post_text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="23 янв 11:00" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/itemview_post_image_view_commentary"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_commentary" />

        <TextView
            android:id="@+id/itemview_post_text_view_commentary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="20dp"
            android:textSize="12sp"
            tools:text="2" />

    </LinearLayout>
</LinearLayout>
